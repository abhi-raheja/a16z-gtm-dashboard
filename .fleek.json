{
  "build": {
    "image": "node:18",
    "command": "rm -rf node_modules .next && npm cache clean --force && npm install && npm run build",
    "publicDir": ".next",
    "baseDir": ".",
    "environment": {
      "NODE_ENV": "production",
      "NODE_VERSION": "18",
      "NPM_CONFIG_PACKAGE_LOCK": "true",
      "NPM_CONFIG_PACKAGE_LOCK_ONLY": "false",
      "SKIP_PNPM": "true"
    }
  }
}
