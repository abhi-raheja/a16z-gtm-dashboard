{
  "build": {
    "image": "node:18",
    "command": "npm install && npm run build",
    "publicDir": "dist",
    "baseDir": "./",
    "environment": {
      "NODE_ENV": "production",
      "NODE_VERSION": "18",
      "NPM_CONFIG_PACKAGE_LOCK": "true",
      "NPM_CONFIG_PACKAGE_LOCK_ONLY": "false",
      "SKIP_PNPM": "true",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  }
}
